{% extends "pyvideohub:templates/base.jinja2" %}

{% block upload_link %}<li class="active"><a href="{{ request.route_path('upload') }}"><span class="glyphicon glyphicon-plus"></span> 上傳</a></li>{% endblock upload_link %}

{% block content %}
<form role="form" action="" method="post">
  <div class="form-group">
    <label for="video_title">影片標題</label>
    {{ form['title'].serialize()|safe }}
  </div>
  <div class="form-group">
    <label for="video_description">影片說明</label>
    {{ form['description'].serialize()|safe }}
  </div>
  <div class="form-group">
    <label for="video_file">影片檔案</label>
    {{ form['file'].serialize()|safe }}
  </div>
  <button type="submit" class="btn btn-default">上傳</button>
</form>
{% endblock content %}
