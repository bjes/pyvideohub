{% extends "pyvideohub:templates/base.jinja2" %}

{% block upload_link %}<li class="active"><a href="{{ request.route_path('upload') }}"><span class="glyphicon glyphicon-plus"></span> 上傳</a></li>{% endblock upload_link %}

{% block content %}
<form role="form" action="" method="post" enctype="multipart/form-data">
  <div class="form-group">
    {% if form.title.errors %}
        <div class="alert alert-danger">
            {% for error in form.title.errors %}<p>{{ error }}</p>{% endfor %}
        </div>
    {% endif %}
    {{ form.title.label }}
    {{ form.title(class="form-control") }}
  </div>
  <div class="form-group">
    {{ form.description.label }}
    {{ form.description(class="form-control") }}
  </div>
  <div class="form-group">
    {% if form.file.errors %}
        <div class="alert alert-danger">
            {% for error in form.file.errors %}<p>{{ error }}</p>{% endfor %}
        </div>
    {% endif %}
    {{ form.file.label }}
    {{ form.file() }}
  </div>
  <button type="submit" class="btn btn-default">上傳</button>
</form>
{% endblock content %}
